<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{{ title|default('Swagger UI') }}</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Source+Code+Pro:300,600|Titillium+Web:400,600,700" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('bundles/cvillegerswaggerui/css/swagger-ui.css') }}" />
    <style>
        html
        {
            box-sizing: border-box;
            overflow: -moz-scrollbars-vertical;
            overflow-y: scroll;
        }
        *,
        *:before,
        *:after
        {
            box-sizing: inherit;
        }

        body {
            margin:0;
            background: #fafafa;
        }
    </style>
</head>
<body>

<div id="swagger-ui"></div>

<script src="{{ asset('bundles/cvillegerswaggerui/js/swagger-ui-bundle.js') }}"></script>
<script src="{{ asset('bundles/cvillegerswaggerui/js/swagger-ui-standalone-preset.js') }}"></script>

<script>
    window.onload = function() {
        // Build a system
        const ui = SwaggerUIBundle({
            url: "{{ json|default('http://petstore.swagger.io/v2/swagger.json') }}",
            dom_id: '#swagger-ui',
            presets: [
                SwaggerUIBundle.presets.apis,
                SwaggerUIStandalonePreset
            ],
            plugins: [
                SwaggerUIBundle.plugins.DownloadUrl
            ],
            layout: "StandaloneLayout"
        })

        window.ui = ui
    }
</script>
</body>

</html>
